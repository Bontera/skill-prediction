{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2018
    },
    "rules": {
        "arrow-spacing": ["error"],
        "init-declarations": ["error", "always"],
        "no-duplicate-imports": [
            "warn"
        ],
        "no-const-assign": [
            "warn"
        ],
        
        "space-unary-ops": [
            "error",
            {
              "words": true,
              "nonwords": false
        }],
        "quote-props": [
            "error", 
            "always"
        ],
        "no-unneeded-ternary": [
            "error"
        ],
        "rest-spread-spacing": ["error", "never"],
        "no-self-compare": [
            "error"
        ],
        "prefer-object-spread": [ "warn" ],
        "semi": [
            "warn",
            "never"
        ],
        "no-lone-blocks": [
            "error"
        ],
        "no-multi-str": [
            "error"
        ],
        "no-path-concat": [
            "error"
        ],
        "no-process-exit": [
            "error"
        ],
        "no-lonely-if": [
            "error"
        ],
        "no-spaced-func": [
            "error"
        ],
        "no-confusing-arrow": [
            "error"
        ],
        "prefer-template": [
            "error"
        ],
        "no-constant-condition": [
            "error"
        ],
        "arrow-body-style": [
            "warn",
            "as-needed"
        ],
        "no-var": [
            "error"
        ],
        "no-nested-ternary": [
            "error"
        ],
        "no-multiple-empty-lines": [
            "warn"
        ],
        "no-template-curly-in-string": [
            "error"
        ],
        "no-empty-function": [
            "error"
        ],
        "no-floating-decimal": [
            "error"
        ],
        "no-multi-spaces": [
            "error"
        ],
        "no-loop-func": [
            "error"
        ],
        "yoda" : [
            "error"
        ]
    }
}